<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_dari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nama_dari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alan"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/pesan_dari"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Halooo apa kabar"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/bubble"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_ke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nama_ke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alan"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/pesan_ke"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Halooo apa kabar"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/bubble_ke"/>

    </LinearLayout>



</RelativeLayout>